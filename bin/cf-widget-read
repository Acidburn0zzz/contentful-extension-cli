#!/usr/bin/env node

'use strict';

var yargs = require('yargs');
var request = require('request');
var http = require('../lib/cli/http');
var read = require('../lib/cli/command/read');

let token = process.env.CONTENTFUL_MANAGEMENT_ACCESS_TOKEN;

if (!token) {
  console.error('CONTENTFUL_MANAGEMENT_ACCESS_TOKEN is undefined or empty');
  process.exit(1);
}

yargs
.reset()
.options({
  'space-id': {
    required: true,
    description: 'Id of a space in Contentful',
    type: 'string',
    requiresArg: true
  },
  'id': {
    required: true,
    description: 'ID of the widget to read',
    type: 'string',
    requiresArg: true,
  },
  'host': {
    description: 'API host',
    type: 'string',
    requiresArg: true
  }
});

let argv = yargs.argv;
let options = {};

options.id = argv.id;
options.spaceId = argv.spaceId;

let context = {
  host: argv.host || 'https://api.contentful.com/',
  token: token,
  request: request,
  http: http
};

read(options, context);
